{
  "name": "van-sheet",
  "version": "0.1.0",
  "description": "Reusable sheet component for VanJS",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --minify terser --sourcemap true && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check . && vitest run"
  },
  "peerDependencies": {
    "vanjs-core": "^1.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "jsdom": "^26.1.0",
    "terser": "^5.46.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  }
}
